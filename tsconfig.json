{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2020",
    "types": ["svelte", "jest"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": false,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": ["node_modules/*", "public/*"],
}
